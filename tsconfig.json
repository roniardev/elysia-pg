{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "rootDir": ".",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "noUncheckedIndexedAccess": true,
        "paths": {
            "@/*": ["./*"]
        }
    }
}
